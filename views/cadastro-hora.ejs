<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Navbar (proporção 2) -->
            <div class="col-md-1" id="navb">
                <section>
                    <%- include('./partials/navbar.ejs') %>
                </section>
                <!-- Conteúdo da Navbar -->
            </div>

            <!-- Div de Input (proporção 5) -->
            <div class="col-md-6" id="container-central">

                    <div class="diasSemana">
                        <h2>Selecione o dia</h2>
                        <button type="button" class="btn btn-outline-light custom-btn" id="Seg" name="Seg" onclick="selectDay(Seg)">Seg</button>
                        <button type="button" class="btn btn-outline-light custom-btn" id="Ter" name="Ter" onclick="selectDay(Ter)">Ter</button>
                        <button type="button" class="btn btn-outline-light custom-btn" id="Qua" name="Qua" onclick="selectDay(Qua)">Qua</button>
                        <button type="button" class="btn btn-outline-light custom-btn" id="Qui" name="Qui" onclick="selectDay(Qui)">Qui</button>
                        <button type="button" class="btn btn-outline-light custom-btn" id="Sex" name="Sex" onclick="selectDay(Sex)">Sex</button>
                        <button type="button" class="btn btn-outline-light custom-btn" id="Sab" name="Sab" onclick="selectDay(Sab)">Sab</button>
                        <button type="button" class="btn btn-outline-light custom-btn" id="Dom" name="Dom" onclick="selectDay(Dom)">Dom</button>
                    </div> 

                    <div class="addTime">
                        <input type="time" id="hora">
                        <button onclick="colect()">Cadastrar Novo Horario</button>
                    </div>
                    <div>
                        <input type="checkbox" id="tipoHora">Horario de Retorno </input>
                    </div>


                        <div class="horariosTable">
                            <div class="" id="showTable">
                                    <div id="card-table">
                                        <H5>HORARIOS DO DIA</H5>
                                        <div class="container-table">
                                            <ul class="horarios-ida">
                                                IDA
                                                <li>11:00</li>
